# Kalshi Market Maker Configuration
# Copy this to .env and fill in your values

# Mode
PAPER_TRADE=true
TRADING_ENABLED=true

# Kalshi credentials
# Get these from https://kalshi.com/account/api-keys
KALSHI_API_KEY=
KALSHI_PRIVATE_KEY_PATH=./kalshi_private_key.pem

# Spread & sizing
MIN_SPREAD_THRESHOLD=0.03
ORDER_SIZE_DEFAULT=10
MAX_EXPOSURE_PER_MARKET=50
MAX_TOTAL_EXPOSURE=500

# Timing
PAIR_TIMEOUT_SECONDS=60
RESOLUTION_BUFFER_SECONDS=120
CANCEL_DEADLINE_SECONDS=90
SCAN_INTERVAL_SECONDS=15

# Risk
MAX_ONE_SIDED_FILLS_BEFORE_HALT=3

# Assets to trade (comma-separated)
ASSETS=BTC,ETH,SOL,XRP

# Alerts (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Dashboard
DASHBOARD_PORT=8052

# Logging
LOG_LEVEL=info
